{
  "openapi": "3.0.0",
  "info": {
    "title": "Notes Actions API",
    "description": "API for notes-related actions including adding and listing notes for projects",
    "version": "1.0.0"
  },
  "paths": {
    "/add-note": {
      "post": {
        "summary": "Add Note",
        "description": "Add a note to a project",
        "operationId": "add_note",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project_id": {
                    "type": "string",
                    "description": "Project ID"
                  },
                  "note_text": {
                    "type": "string",
                    "description": "The note content to add"
                  },
                  "author": {
                    "type": "string",
                    "description": "Author of the note (defaults to 'Agent')"
                  }
                },
                "required": [
                  "project_id",
                  "note_text"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Note added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "action": {
                      "type": "string"
                    },
                    "project_id": {
                      "type": "string"
                    },
                    "note_text": {
                      "type": "string"
                    },
                    "author": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    },
                    "note_data": {
                      "type": "object"
                    },
                    "mock_mode": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/list-notes": {
      "post": {
        "summary": "List Notes",
        "description": "List all notes for a project",
        "operationId": "list_notes",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "project_id": {
                    "type": "string",
                    "description": "Project ID"
                  }
                },
                "required": [
                  "project_id"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "List of notes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "action": {
                      "type": "string"
                    },
                    "project_id": {
                      "type": "string"
                    },
                    "notes": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "total_count": {
                      "type": "integer"
                    },
                    "source": {
                      "type": "string"
                    },
                    "mock_mode": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}